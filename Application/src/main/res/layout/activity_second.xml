<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
                android:id="@+id/ra"
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:innerRadius="10dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardBackgroundColor="#FFFAFA"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:background="#d481a7"
                android:gravity="center"
                android:text="Channel 1" />
                    <Spinner
                        android:id="@+id/miSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:background="#d481a7"
                android:gravity="center"
                android:text="Alarm" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/grp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="ON" />

                    <RadioButton
                        android:id="@+id/b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="OFF" />


                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"

                        android:autofillHints="Low threshold"
                        android:hint="Low_threshold(°F)"
                        android:inputType="text"
                        android:maxLength="5"
                        android:textColor="#8f689a"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/edit2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"

                        android:autofillHints="high threshold"
                        android:hint="High_threshold(°F)"
                        android:inputType="text"
                        android:maxLength="5"
                        android:textColor="#8f689a"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>
                </LinearLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/rb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:innerRadius="10dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardBackgroundColor="#FFFAFA"

        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:background="#d481a7"
                android:gravity="center"
                android:text="Channel 2" />

            <Spinner
                android:id="@+id/miSpinner1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:background="#d481a7"
                android:gravity="center"
                android:text="Alarm" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/grp1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/a1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="ON" />

                    <RadioButton
                        android:id="@+id/b1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="OFF" />


                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="0.4"
                        android:autofillHints="low threshold"
                        android:hint="Low_threshold(°F)"
                        android:inputType="text"
                        android:maxLength="5"
                        android:textColor="#8f689a"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/edit4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="0.4"
                        android:autofillHints="high threshold"
                        android:hint="High_threshold(°F)"
                        android:inputType="text"
                        android:maxLength="5"
                        android:textColor="#8f689a"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/rc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:innerRadius="10dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardBackgroundColor="#FFFAFA"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="0.5"
            android:background="#d481a7"
            android:gravity="center"
            android:text="Channel 3" />

        <Spinner
            android:id="@+id/miSpinner2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/grp2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/a2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="ON" />

                <RadioButton
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="OFF" />


            </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/edit5"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:autofillHints="Temp_low"
            android:hint="Temp_low(°F)"
            android:inputType="text"
            android:maxLength="5"
            android:textColor="#8f689a"
            android:textStyle="bold"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/edit6"
            android:layout_width="120dp"
            android:layout_height="40dp"

            android:layout_weight="0.4"
            android:autofillHints="Temp_high"
            android:hint="Temp_high(°F)"
            android:inputType="text"
            android:maxLength="5"
            android:textColor="#8f689a"
            android:textStyle="bold"
            android:visibility="invisible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/edit7"
            android:layout_width="120dp"
            android:layout_height="40dp"

            android:layout_weight="0.4"
            android:autofillHints="Humidity_low"
            android:hint="Humidity_low(0-100)"
            android:inputType="text"
            android:maxLength="5"
            android:textColor="#8f689a"
            android:textStyle="bold"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/edit8"
            android:layout_width="120dp"
            android:layout_height="40dp"

            android:layout_weight="0.4"
            android:autofillHints="Humidity_high_threshold"
            android:hint="Humidity_high(0-100)"
            android:inputType="text"
            android:maxLength="5"
            android:textColor="#8f689a"
            android:textStyle="bold"
            android:visibility="invisible" />
        </LinearLayout>

        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/rd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:innerRadius="10dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardBackgroundColor="#FFFAFA"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:background="#d481a7"
                android:gravity="center"
                android:text="Temperature Settings" />



                <RadioGroup
                    android:id="@+id/grp3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="0.9"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/a3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Celsius" />

                    <RadioButton
                        android:id="@+id/b3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Faranheit" />


                </RadioGroup>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:innerRadius="10dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardBackgroundColor="#FFFAFA"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:background="#d481a7"
                android:gravity="center"
                android:text="Transmitter Type" />

            <Spinner
                android:id="@+id/miSpinner3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:background="#d481a7"
            android:gravity="center"
            android:text="Data on App" />



            <RadioGroup
                android:id="@+id/grp4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/a4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Not Required" />

                <RadioButton
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Required" />


            </RadioGroup>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/rf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_weight="0.14"
        android:innerRadius="10dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardBackgroundColor="#FFFAFA"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:background="#d481a7"
                android:gravity="center"
                android:text="@string/display_interval"/>


            <Spinner

                android:id="@+id/miSpinner4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:background="#d481a7"
                android:gravity="center"
                android:text="@string/tx_interval"/>
            <Spinner

                android:id="@+id/miSpinner5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5">

            </Spinner>
        </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="#d481a7"
            android:text="Save" />

    </LinearLayout>


</LinearLayout>
</android.support.v4.widget.NestedScrollView>
