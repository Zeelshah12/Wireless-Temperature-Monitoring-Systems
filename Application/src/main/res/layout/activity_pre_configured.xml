<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/ra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:innerRadius="10dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardBackgroundColor="#FFFAFA"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:background="#d481a7"
                    android:gravity="center"
                    android:text="Channel 1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="start"

                    android:background="#d481a7"
                    android:gravity="center"
                    android:text="Sensor Value: " />

                <TextView
                    android:id="@+id/channel_1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"

                    android:layout_gravity="end"

                    android:gravity="center" />
            </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"

                    android:background="#d481a7"
                    android:gravity="center"
                    android:text="Alarm" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="5dp"
                        android:background="#d481a7"
                        android:gravity="center"
                        android:text="Low threshold: " />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:id="@+id/low_thres1"


                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="start"

                        android:background="#d481a7"
                        android:gravity="center"
                        android:text="High threshold: " />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:id="@+id/high_thres1"


                        android:gravity="center" />
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:innerRadius="10dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardBackgroundColor="#FFFAFA"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="#d481a7"
                    android:gravity="center"
                    android:text="Channel 2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginTop="5dp"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="start"

                        android:background="#d481a7"
                        android:gravity="center"
                        android:text="Sensor Value: " />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:id="@+id/channel_2"

                        android:gravity="center" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:background="#d481a7"
                    android:gravity="center"
                    android:layout_marginTop="5dp"

                    android:text="Alarm" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginTop="5dp"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="start"

                        android:background="#d481a7"
                        android:gravity="center"
                        android:text="Low threshold: " />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:id="@+id/low_thres2"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginTop="5dp"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="start"

                        android:background="#d481a7"
                        android:gravity="center"
                        android:text="High threshold: " />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:id="@+id/high_thres2"
                        android:gravity="center" />
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/rc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"


            android:innerRadius="10dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardBackgroundColor="#FFFAFA"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="#d481a7"
                    android:gravity="center"

                    android:text="Channel 3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginTop="5dp"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="start"


                        android:background="#d481a7"
                        android:gravity="center"
                        android:text="Sensor Value: " />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:id="@+id/channel_3"

                        android:gravity="center" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:background="#d481a7"
                    android:gravity="center"
                    android:layout_marginTop="5dp"

                    android:text="No Alarm" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginTop="5dp"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="start"

                        android:background="#d481a7"
                        android:gravity="center"
                        android:text="Transmitter Type: " />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:id="@+id/trans"

                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginTop="5dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="start"

                        android:background="#d481a7"
                        android:gravity="center"
                        android:text="Temperature Settings: " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:id="@+id/temp"

                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginTop="5dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="start"

                        android:background="#d481a7"
                        android:gravity="center"
                        android:text="Display Interval in seconds: " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:id="@+id/display"

                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginTop="5dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="start"

                        android:background="#d481a7"
                        android:gravity="center"
                        android:text="Tx Interval: " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:id="@+id/tx"

                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginTop="5dp"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="start"

                        android:background="#d481a7"
                        android:gravity="center"
                        android:text="Data on App: " />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:id="@+id/trans1"

                        android:gravity="center" />
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSubmit1"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="#d481a7"
                android:text="Save" />

        </LinearLayout>



</LinearLayout>
</android.support.v4.widget.NestedScrollView>
